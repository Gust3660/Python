import numpy as np
import matplotlib.pyplot as plt
from scipy.interpolate import interp1d

# Datos de ejemplo
x = np.array([0, 1, 2, 3, 4, 5])
y = np.array([0, 2, 4, 6, 8, 10])

# Crear funci贸n de interpolaci贸n lineal
f = interp1d(x, y, kind='linear')

# Generar nuevos puntos interpolados
x_new = np.linspace(0, 5, num=50)
y_new = f(x_new)

# Graficar los datos originales y los interpolados
plt.scatter(x, y, label='Datos originales')
plt.plot(x_new, y_new, label='Interpolaci贸n lineal', color='red')
plt.legend()
plt.xlabel('X')
plt.ylabel('Y')
plt.title('Interpolaci贸n Lineal en Python')
plt.show()
